# DB
POSTGRES_PASSWORD=your-secure-password
POSTGRES_USER=postgres
POSTGRES_DB=exchanger

#DJANGO
DB_ENGINE=django.db.backends.postgresql
DB_NAME=exchanger
DB_USER=postgres
DB_PASSWORD=your-secure-password
DB_HOST=postgres
DB_PORT=5432
SECRET_KEY=your-secret-key-here
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1,example.com
DJANGO_LOG_LEVEL=INFO
CELERY_LOG_LEVEL=INFO

#RABBITMQ
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_VIRTUAL_HOST=/
RABBITMQ_QUEUE=exchanger

#CELERY TASK SETTINGS
CELERY_TASK_TIMEOUT=3600
CELERY_TASK_RETRY_TIME=300
CELERY_BROKER_URL=amqp://guest:guest@rabbitmq:5672//
CELERY_BEAT_SCHEDULER=django_celery_beat.schedulers:DatabaseScheduler

#REDIS
REDIS_URL=redis://redis:6379/1

#CURRENCY
CURRENCY_COURSES_URL=https://api.exchangerate-api.com/v4/latest/

#SENTRY
SENTRY_DSN=your-sentry-dsn
SENTRY_ENV=production
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_PROFILES_SAMPLE_RATE=0.1

#YOOKASSA
YOOKASSA_SHOP_ID=your-shop-id
YOOKASSA_SECRET_KEY=your-secret-key
YOOKASSA_RETURN_URL=https://example.com/payment/return

# Email settings
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=your-email@gmail.com

# CORS settings
CORS_ALLOWED_ORIGINS=https://example.com,https://www.example.com
CORS_ALLOW_CREDENTIALS=True

# Security settings
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
SECURE_PROXY_SSL_HEADER=('HTTP_X_FORWARDED_PROTO', 'https')

# REST Framework settings
PAGE_SIZE=10
REST_FRAMEWORK_THROTTLE_RATES={
    'anon': '100/day',
    'user': '1000/day'
}

# Cache settings
CACHES={
    'default': {
        'BACKEND': 'django_redis.cache.RedisCache',
        'LOCATION': 'redis://redis:6379/1',
        'OPTIONS': {
            'CLIENT_CLASS': 'django_redis.client.DefaultClient',
        }
    }
}

# Grafana settings
GRAFANA_ADMIN_PASSWORD=your-secure-password

# AWS S3 settings (if using S3 for static/media files)
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_STORAGE_BUCKET_NAME=your-bucket-name
AWS_S3_REGION_NAME=your-region
AWS_S3_CUSTOM_DOMAIN=f'{AWS_STORAGE_BUCKET_NAME}.s3.amazonaws.com'
AWS_DEFAULT_ACL=public-read
AWS_S3_OBJECT_PARAMETERS={
    'CacheControl': 'max-age=86400',
}